<div class="container">
  <h2>Specify your preferences</h2>

  <div class="slidecontainer">
    <input type="range" min="1" max="3" value="2" class="slider" id="exp-preferences">
  </div>
  <%= simple_form_for [@experience, @experience_preferences_category] do |f| %>
    <%= f.input :category, as: :check_boxes, collection: @categories %>
    <%= f.button :submit, class: "btn btn-primary", value: "Finaliser Mes Preferences" %>
  <% end %>
</div>
